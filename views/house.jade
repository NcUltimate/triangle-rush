extends layout

block content
	.wrapper.house
		.page-header
			.title Virtual Tour
			img(src='/images/icons/house_white.png', width='40')
		.white-box.page-subtitle Tours are available at any time, regardless of whether a rush event is occurring. We will gladly answer any questions or concerns you have about our living space, accomodations, handicap access, etc.
		hr
		.post-container
			each room, i in rooms
				.post.white-box
					.title #{room.name}
					.img-container
						img(src='/images/house/'+room.img)
					.data-container
						span.header
							span Features
							ul.room-features
								each feat in room.features
									li.room-feature #{feat}
						span.description #{room.desc}