extends layout

block content
	.wrapper.us
		.page-header 
			.title Who We Are
			img(src='/images/icons/people_white.png', width='40')
		.white-box.page-subtitle Founded in 1909, we are a social house of well-rounded students with 32 chapters across the country and more than 26,000 members. All Triangle Fraternity brothers strive to be leaders in the campus, local community, and their chosen fields of studies. 
		hr
		.post-container
			each post, i in us
				.post.white-box
					.title #{post.name}
					.img-container
						img(src='/images/us/'+post.img)
					.data-container
						span.header(class='fa-'+post.icon)
						span.description #{post.desc}